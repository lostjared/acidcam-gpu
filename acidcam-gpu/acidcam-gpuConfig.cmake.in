@PACKAGE_INIT@

# acidcam-gpu CMake configuration file
# This file is used to find and use the acidcam-gpu library in other CMake projects

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(OpenCV REQUIRED)
find_dependency(PkgConfig REQUIRED)
find_dependency(MXWrite REQUIRED)

pkg_check_modules(FFMPEG REQUIRED IMPORTED_TARGET
    libavcodec
    libavformat
    libavutil
    libswscale
)

# Import the acidcam-gpu target
include("${CMAKE_CURRENT_LIST_DIR}/acidcam-gpuTargets.cmake")

# Set variables for backward compatibility
set(acidcam-gpu_FOUND TRUE)
set(acidcam-gpu_LIBRARIES acidcam-gpu::acidcam-gpu)
set(acidcam-gpu_INCLUDE_DIRS "@PACKAGE_CMAKE_INSTALL_INCLUDEDIR@/acidcam-gpu")

# Check that the required components are available
check_required_components(acidcam-gpu)
