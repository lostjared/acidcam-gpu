# acidcam-gpu CMake configuration file
@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

find_dependency(CUDAToolkit REQUIRED)
find_dependency(OpenCV REQUIRED COMPONENTS core imgproc highgui videoio cudaimgproc)
find_dependency(PkgConfig REQUIRED)
find_dependency(MXWrite REQUIRED CONFIG)
find_dependency(Threads REQUIRED)

pkg_check_modules(FFMPEG REQUIRED IMPORTED_TARGET
    libavcodec
    libavformat
    libavutil
    libswscale
)

include("${CMAKE_CURRENT_LIST_DIR}/acidcam-gpuTargets.cmake")

check_required_components(acidcam-gpu)

set(acidcam-gpu_LIBRARIES acidcam-gpu::acidcam-gpu)
set(acidcam-gpu_INCLUDE_DIRS "@PACKAGE_CMAKE_INSTALL_INCLUDEDIR@")
